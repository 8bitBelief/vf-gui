    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "name": "LocalHost Server Chrome",
            "url": "http://localhost:8888/pixi-vfui",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}",
            "preLaunchTask":"build",
        },
        {
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "name": "Dev",
            "url": "http://127.0.0.1:5501/",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}",
            "preLaunchTask":"build",
        },
        {
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "name": "Test",
            "url": "http://127.0.0.1:5501/test.html?type=TestTween",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}",
            "preLaunchTask":"test",
        },
        {
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "name": "Publish",
            "url": "http://127.0.0.1:5501/test.html?type=TestTween",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}",
            "preLaunchTask":"prod",
        },
        {  
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "name": "Launch index.html",
            "file": "${workspaceFolder}/index.html",
            "sourceMaps": true,
            "preLaunchTask":"build"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "node buildPublish",
            "program": "${workspaceFolder}/test.js"
        },
    ]
}